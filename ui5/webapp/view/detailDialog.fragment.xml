<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:u="sap.ui.unified"
	class="sapUiSizeCompact">
	<Dialog id="detailDialog" title="Платежное поручение" resizable="true" contentWidth="1024px">
		<content>
			<HBox width="100%" class="pad1">
				<VBox width="20%" class="pad1">
					<Label text="Номер:"/>
					<Input id="docNum" value="{docNum}" editable="false"/>
				</VBox>
				<VBox width="20%" class="pad1">
					<Label text="Дата:"/>
					<Input id="docDate" value="{docDate}" editable="false"/>
				</VBox>
				<VBox width="30%" class="pad1"></VBox>
				<VBox width="30%" class="pad1">
					<Label text="Вид платежа:"/>
					<Input id="paytKind" value="{paytKind}" editable="false"/>
				</VBox>
			</HBox>
			<!-- -->
			<Text text="Плательщик" class="FormTitle"/>
			<HBox width="100%">
				<VBox width="70%">
					<HBox width="100%">
						<HBox width="40%" class="labelFull">
							<Label text="БЕ:"/>
						</HBox>
						<HBox width="60%">
							<HBox width="20%" class="pad05">
								<Input id="aa" value="{docExtId}" editable="false"/>
							</HBox>
							<HBox width="40%" class="pad05 labelFull">
								<Label text="ИНН:" class="label2"/>
								<Input id="bb" value="{docExtId}" editable="false"/>
							</HBox>
							<HBox width="40%" class="pad05 labelFull">
								<Label text="КПП:" class="label2"/>
								<Input id="cc" value="{docExtId}" editable="false"/>
							</HBox>
						</HBox>
					</HBox>
					<HBox width="100%">
						<HBox width="40%" class="labelFull">
							<Label text="Наименование Плательщика:"/>
						</HBox>
						<HBox width="60%" class="formInput">
							<Input id="aa3" value="{docExtId}" editable="false"/>
						</HBox>
					</HBox>
					<HBox width="100%">
						<HBox width="40%" class="labelFull">
							<Label text="Наименование Банка Плательщика:"/>
						</HBox>
						<HBox width="60%" class="formInput">
							<Input id="aa333" value="{docExtId}" editable="false"/>
						</HBox>
					</HBox>
					<HBox width="100%">
						<HBox width="40%" class="labelFull">
							<Label text="Город Банка Плательщика:"/>
						</HBox>
						<HBox width="60%" class="formInput">
							<Input id="aa33" value="{docExtId}" editable="false"/>
						</HBox>
					</HBox>
				</VBox>
				<VBox width="30%">
					<form:SimpleForm editable="false" layout="ResponsiveGridLayout" class="ppform" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="4"
						adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" singleContainerFullSize="false">
						<form:content>
							<Label text="Сумма:"/>
							<Input id="aa1" value="{docExtId}" editable="false"/>
							<Label text="Счет №:"/>
							<Input id="bb1" value="{docExtId}" editable="false"/>
							<Label text="БИК:"/>
							<Input id="cc1" value="{docExtId}" editable="false"/>
							<Label text="Счет № ???:"/>
							<Input id="dd1" value="{docExtId}" editable="false"/>
						</form:content>
					</form:SimpleForm>
				</VBox>
			</HBox>
			<!-- -->
			<Text text="Получатель" class="FormTitle"/>
			<HBox width="100%">
				<VBox width="70%">
					
					<HBox width="100%">
						<HBox width="40%" class="labelFull">
							<Label text="Наименование Банка Получателя:"/>
						</HBox>
						<HBox width="60%" class="formInput">
							<Input id="aa5" value="{docExtId}" editable="false"/>
						</HBox>
					</HBox>
					<HBox width="100%">
						<HBox width="40%" class="labelFull">
							<Label text="Город Банка Получателя:"/>
						</HBox>
						<HBox width="60%" class="formInput">
							<Input id="aa6" value="{docExtId}" editable="false"/>
						</HBox>
					</HBox>
					<HBox width="100%">
						<HBox width="50%" class="labelFull">
							 <!-- -->
						</HBox>
						<HBox width="50%">
							<HBox width="20%" class="pad05">
								<Input id="aa4" value="{docExtId}" editable="false"/>
							</HBox>
							<HBox width="40%" class="pad05 labelFull">
								<Label text="ИНН:" class="label2"/>
								<Input id="bb4" value="{docExtId}" editable="false"/>
							</HBox>
							<HBox width="40%" class="pad05 labelFull">
								<Label text="КПП:" class="label2"/>
								<Input id="cc4" value="{docExtId}" editable="false"/>
							</HBox>
						</HBox>
					</HBox>
					<HBox width="100%">
						<HBox width="40%" class="labelFull">
							<Label text="Наименование Получателя:"/>
						</HBox>
						<HBox width="60%" class="formInput">
							<Input id="aa7" value="{docExtId}" editable="false"/>
						</HBox>
					</HBox>
				</VBox>
				<VBox width="30%">
					<form:SimpleForm editable="false" layout="ResponsiveGridLayout" class="ppform" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="4"
						adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" singleContainerFullSize="false">
						<form:content>
							<Label text="Сумма:"/>
							<Input id="aa11" value="{docExtId}" editable="false"/>
							<Label text="Счет №:"/>
							<Input id="bb11" value="{docExtId}" editable="false"/>
							<Label text="БИК:"/>
							<Input id="cc11" value="{docExtId}" editable="false"/>
							<Label text="Счет № ???:"/>
							<Input id="dd11" value="{docExtId}" editable="false"/>
						</form:content>
					</form:SimpleForm>
				</VBox>
			</HBox>
			<!-- -->
			<HBox class="line" width="100%"></HBox>
			<!-- -->
			<HBox class="small_inputs" width="100%">
			    <Label text="101:"/>
			    <Input id="sm1" value="{docExtId}" editable="false"/>
			    <Label text="101:"/>
			    <Input id="sm2" value="{docExtId}" editable="false"/>
			</HBox>
			
			
		</content>
		<buttons>
			<Button text="Сохранить" press="detailDialogSave"></Button>
			<Button text="Закрыть" press="detailDialogClose"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>